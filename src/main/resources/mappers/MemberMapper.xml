<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.practice.todolist.mapper.MemberMapper">

<insert id="join" parameterType="com.practice.todolist.dto.MemberDto" >
    insert into MEMBER (name, email) values (#{name}, #{email});
 </insert>

    <select id="findByEmail" parameterType="String" resultType="java.lang.Integer">
        select id from MEMBER where email = #{email};
    </select>

    <select id="findById" parameterType="Integer" resultType="com.practice.todolist.model.Member">
        select * from MEMBER where id = #{id};
    </select>

</mapper>